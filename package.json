{
    "name": "brainiac-engine",
    "version": "0.8.0",
    "description": "A comprehensive 2D game engine with agent-based architecture, real-time multiplayer support, advanced visual effects, and LLM-powered intelligence with centralized arslib integration.",
    "main": "index.js",
    "type": "module",
    "readme": "README.md",
    "files": [
        "*.js",
        "*.md",
        "client/**",
        "server/**",
        "common/**",
        "examples/**",
        "docs/**",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "scripts": {
        "setup": "npm install && echo 'âœ… Setup complete! Run npm test to verify everything works.'",
        "dev": "npm run setup",
        "test": "mocha",
        "posttest": "rm -f log.txt",
        "test:watch": "npm test -- --watch",
        "test:llm": "./scripts/test-llm.sh",
        "test:llm:mock": "./scripts/test-llm.sh mock",
        "test:llm:real": "./scripts/test-llm.sh real",
        "test:llm:both": "./scripts/test-llm.sh both",
        "test:caching": "./scripts/test-caching.sh",
        "test:caching:mock": "./scripts/test-caching.sh mock",
        "test:caching:real": "./scripts/test-caching.sh real",
        "test:caching:both": "./scripts/test-caching.sh both",
        "test:caching:performance": "./scripts/test-caching.sh performance",
        "prepublishOnly": "npm test",
        "start": "echo 'This is a library. Import it in your project or run npm test to verify installation.'"
    },
    "keywords": [
        "game-engine",
        "2d",
        "canvas",
        "multiplayer",
        "agents",
        "animation",
        "particles",
        "ui",
        "javascript",
        "es6"
    ],
    "author": "Andre Silva",
    "license": "MIT",
    "engines": {
        "node": ">=14.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/andrers52/brainiac-engine.git"
    },
    "bugs": {
        "url": "https://github.com/andrers52/brainiac-engine/issues"
    },
    "homepage": "https://github.com/andrers52/brainiac-engine#readme",
    "dependencies": {
        "@xenova/transformers": "2.17.2",
        "arslib": "0.8.1",
        "cors": "2.8.5",
        "express": "5.1.0",
        "socket.io": "4.8.1",
        "socket.io-client": "4.8.1"
    },
    "devDependencies": {
        "jsdom": "26.1.0",
        "mocha": "11.6.0",
        "sinon": "20.0.0"
    }
}
